<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>com.application.client.code.java.Application ApplicationService</servlet-name>
        <servlet-class>com.application.server.service.impl.application.ApplicationServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.application.client.code.java.Application AuthorizationService</servlet-name>
        <servlet-class>com.application.server.service.impl.authorization.AuthorizationServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.application.client.code.java.Application ApplicationService</servlet-name>
        <url-pattern>/application/application</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.application.client.code.java.Application AuthorizationService</servlet-name>
        <url-pattern>/application/authorization</url-pattern>
    </servlet-mapping>
</web-app>