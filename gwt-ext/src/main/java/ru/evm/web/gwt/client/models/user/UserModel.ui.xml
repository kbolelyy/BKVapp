<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <div class="login-page">
            <div class="form">
                <form class="login-form">
                    <input ui:field='firstName' type="text" placeholder="first name"/>
                    <input ui:field='lastName' type="text" placeholder="last name"/>
                    <input ui:field='email' type="text" placeholder="email"/>
                    <input ui:field='login' type="text" placeholder="login"/>
                    <input ui:field='password' type="password" placeholder="password"/>
                    <g:Button ui:field='create'>create</g:Button>
                </form>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>